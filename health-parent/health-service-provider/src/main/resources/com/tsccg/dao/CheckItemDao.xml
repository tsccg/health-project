<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tsccg.dao.CheckItemDao">
    <insert id="add" parameterType="com.tsccg.pojo.CheckItem">
        insert into t_checkitem(code,name,sex,age,price,type,attention,remark)
        values
        (#{code},#{name},#{sex},#{age},#{price},#{type},#{attention},#{remark})
    </insert>
    <select id="selectByCondition" parameterType="string" resultType="com.tsccg.pojo.CheckItem">
        select id,code,name,sex,age,price,type,attention,remark from t_checkitem
        <if test="value != null and value.length > 0">
            code = value or name = value
        </if>
    </select>
</mapper>