<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tsccg.dao.CheckItemDao">
    <!--添加记录-->
    <insert id="add" parameterType="com.tsccg.pojo.CheckItem">
        insert into t_checkitem(code,name,sex,age,price,type,attention,remark)
        values
        (#{code},#{name},#{sex},#{age},#{price},#{type},#{attention},#{remark})
    </insert>
    <!--分页查询-->
    <select id="selectByCondition" parameterType="string"
            resultType="com.tsccg.pojo.CheckItem">
        select id,code,name,sex,age,price,type,attention,remark from t_checkitem
        <if test="value != null and value.length > 0">
            where code = #{value} or name = #{value}
        </if>
    </select>
    <!--根据检查项id查询中间关系表-->
    <select id="findCountCheckItemById" parameterType="int" resultType="java.lang.Long">
        select count(*) from t_checkgroup_checkitem where checkitem_id = #{checkitem_id}
    </select>
    <!-- 按id删除 -->
    <delete id="deleteById" parameterType="int">
        delete from t_checkitem where id = #{id}
    </delete>
    <!--按id查询-->
    <select id="findById" parameterType="int" resultType="com.tsccg.pojo.CheckItem">
        select id,code,name,sex,age,price,type,attention,remark from t_checkitem
        where id = #{id}
    </select>
    <!--编辑记录-->
    <update id="update" parameterType="com.tsccg.pojo.CheckItem">
        update t_checkitem
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>
    <!--查询所有数据-->
    <select id="findAll" resultType="com.tsccg.pojo.CheckItem">
        select id,code,name,sex,age,price,type,attention,remark from t_checkitem
    </select>
</mapper>